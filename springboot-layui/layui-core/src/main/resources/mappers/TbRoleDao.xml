<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lquan.layui.dao.TbRoleDao">

    <resultMap type="com.lquan.layui.domain.TbRole" id="TbRoleMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="remake" column="remake" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="VARCHAR"/>
        <result property="updateUser" column="update_user" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbRoleMap">
        select
          id, name, remake, create_time, update_time, update_user
        from  tb_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbRoleMap">
        select
          id, name, remake, create_time, update_time, update_user
        from  tb_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbRoleMap">
        select
          id, name, remake, create_time, update_time, update_user
        from  tb_role
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="remake != null and remake != ''">
                and remake = #{remake}
            </if>
            <if test="createTime != null and createTime != ''">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null and updateTime != ''">
                and update_time = #{updateTime}
            </if>
            <if test="updateUser != null and updateUser != ''">
                and update_user = #{updateUser}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into  tb_role(id,name, remake, create_time, update_time, update_user)
        values (#{id},#{name}, #{remake}, #{createTime}, #{updateTime}, #{updateUser})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update  tb_role
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="remake != null and remake != ''">
                remake = #{remake},
            </if>
            <if test="createTime != null and createTime != ''">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null and updateTime != ''">
                update_time = #{updateTime},
            </if>
            <if test="updateUser != null and updateUser != ''">
                update_user = #{updateUser},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from  tb_role where id = #{id}
    </delete>

    <select id="findAll" resultMap="TbRoleMap">
        select
          id, name, remake, create_time, update_time, update_user
        from  tb_role
    </select>

</mapper>